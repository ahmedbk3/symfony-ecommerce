{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-5 text-center fw-bold">üõçÔ∏è Explore Our Products</h2>

    <!-- FILTERS + SORTING -->
    <div class="card p-4 mb-5 shadow-sm border-0">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Search</label>
                    <input type="text" name="name" placeholder="Product name..." class="form-control" value="{{ app.request.get('name') }}">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">Min Price</label>
                    <input type="number" step="0.01" name="min_price" placeholder="Min" class="form-control" value="{{ app.request.get('min_price') }}">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">Max Price</label>
                    <input type="number" step="0.01" name="max_price" placeholder="Max" class="form-control" value="{{ app.request.get('max_price') }}">
                </div>
                <div class="col-md-4 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-dark w-100">
                        üîç Apply Filters
                    </button>
                    <a href="{{ path('shop_products') }}" class="btn btn-outline-secondary">‚ü≤ Reset</a>
                </div>
            </div>
        </form>

        <!-- Sorting -->
        <div class="mt-4 text-end">
            <div class="btn-group" role="group">
                <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'price', 'order': 'asc'}) ) }}" class="btn btn-outline-primary btn-sm">Price ‚Üë</a>
                <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'price', 'order': 'desc'}) ) }}" class="btn btn-outline-primary btn-sm">Price ‚Üì</a>
                <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'name', 'order': 'asc'}) ) }}" class="btn btn-outline-primary btn-sm">Name ‚Üë</a>
                <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'name', 'order': 'desc'}) ) }}" class="btn btn-outline-primary btn-sm">Name ‚Üì</a>
            </div>
        </div>
    </div>

    <!-- PRODUCT GRID -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        {% for product in pagination %}
            <div class="col">
                <div class="card h-100 shadow-sm border-0 product-card">
                    {% if product.image %}
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top object-fit-cover" alt="{{ product.name }}" style="height: 200px;">
                    {% else %}
                        <div class="card-img-top bg-secondary text-white d-flex justify-content-center align-items-center" style="height: 200px;">No Image</div>
                    {% endif %}

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-muted small mb-2">{{ product.description|u.truncate(90, '...') }}</p>
                        <p class="fw-bold mb-3">{{ product.price }} DT</p>
                        <form method="post" action="{{ path('cart_add', { id: product.id }) }}" class="mt-auto">
                            <input type="hidden" name="quantity" value="1">
                            <button type="submit" class="btn btn-success w-100">üõí Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">No products found.</div>
            </div>
        {% endfor %}
    </div>

    <!-- PAGINATION -->
    <div class="mt-5 d-flex justify-content-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg">
                {{ knp_pagination_render(pagination) }}
            </ul>
        </nav>
    </div>
</div>

{% endblock %}
