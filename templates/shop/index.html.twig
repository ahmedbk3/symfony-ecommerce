{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Our Products</h2>

    <!-- Sorting Links -->
    <div class="mb-3">
        <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'price', 'order': 'asc'}) ) }}" class="btn btn-outline-secondary btn-sm me-2">Sort by Price â†‘</a>
        <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'price', 'order': 'desc'}) ) }}" class="btn btn-outline-secondary btn-sm me-2">Sort by Price â†“</a>
        <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'name', 'order': 'asc'}) ) }}" class="btn btn-outline-secondary btn-sm me-2">Sort by Name â†‘</a>
        <a href="{{ path('shop_products', app.request.query.all | merge({'sort_by': 'name', 'order': 'desc'}) ) }}" class="btn btn-outline-secondary btn-sm">Sort by Name â†“</a>
    </div>

    <!-- Filter Form -->
    <form method="get" class="row mb-4 g-2">
        <div class="col-md">
            <input type="text" name="name" placeholder="Name" class="form-control" value="{{ app.request.get('name') }}">
        </div>
        <div class="col-md">
            <input type="number" step="0.01" name="min_price" placeholder="Min Price" class="form-control" value="{{ app.request.get('min_price') }}">
        </div>
        <div class="col-md">
            <input type="number" step="0.01" name="max_price" placeholder="Max Price" class="form-control" value="{{ app.request.get('max_price') }}">
        </div>
        <div class="col-md">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <!-- Product Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for product in pagination %}
            <div class="col">
                <div class="card h-100">
                    {% if product.image %}
                        <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description|u.truncate(100, '...') }}</p>
                        <p class="fw-bold">{{ product.price }} DT</p>
                        <form method="post" action="{{ path('cart_add', { id: product.id }) }}">
                            <input type="hidden" name="quantity" value="1">
                            <button type="submit" class="btn btn-sm btn-success mt-2">
                                ðŸ›’ Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No products found.</p>
        {% endfor %}
    </div>

    <!-- Pagination Controls -->
    <div class="mt-4">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
