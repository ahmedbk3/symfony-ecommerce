<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}TUNE IN{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap + Icons #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <!-- Bootstrap core -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Material Design for Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-material-design@4.1.3/dist/css/bootstrap-material-design.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-material-design@4.1.3/dist/js/bootstrap-material-design.min.js"></script>
    <script>
        $(document).ready(function() {
            $('body').bootstrapMaterialDesign();
        });
    </script>

    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100 bg-light">


    {# Navbar #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="{{ path('app_homepage') }}">
                <i class="bi bi-music-note-beamed"></i> TUNE IN
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    {% if app.user %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                                {{ app.user.username|default(app.user.email) }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">Mon Profil</a></li>
                                <li><a class="dropdown-item" href="{{ path('shop_products') }}">Produits</a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}">Admin</a></li>
                                {% endif %}
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Déconnexion</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Inscription</a></li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="{{ path('cart_index') }}">
                            <i class="bi bi-cart3"></i>
                            {% if app.session.get('cart') %}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    {{ app.session.get('cart')|length }}
                                </span>
                            {% endif %}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    {% block hero %}
        {# default empty hero block #}
    {% endblock %}

    {# Flash Messages #}
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {# Main Content #}
    <main class="container flex-fill py-4">
        {% block body %}{% endblock %}
    </main>

    {# Footer #}
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>TUNE IN</h5>
                    <p>Votre plateforme musicale interactive préférée.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <p><i class="bi bi-envelope"></i> <a href="mailto:contact@tunein.tn" class="text-light">contact@tunein.tn</a></p>
                    <p><i class="bi bi-geo-alt"></i> Tunis, Tunisie</p>
                    <p><i class="bi bi-telephone"></i> +216 58 449 330</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Suivez-nous</h5>
                    <a href="#" class="text-light me-2"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-light me-2"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="text-light me-2"><i class="bi bi-youtube fs-4"></i></a>
                    <a href="#" class="text-light"><i class="bi bi-spotify fs-4"></i></a>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center small">&copy; {{ "now"|date("Y") }} TUNE IN. Tous droits réservés.</div>
        </div>
    </footer>

    {# Scroll to Top #}
    <button onclick="window.scrollTo({top: 0, behavior: 'smooth'});" 
            class="btn btn-dark rounded-circle position-fixed bottom-0 end-0 m-4" title="Remonter">
        <i class="bi bi-arrow-up-short fs-3"></i>
    </button>

    {# Bootstrap Bundle JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        document.querySelectorAll('section, .card, .row, .container, h1, h2, h3, p').forEach((el, index) => {
            el.setAttribute('data-aos', 'fade');
            el.setAttribute('data-aos-delay', (index % 5) * 100);
        });
        AOS.init({
            duration: 600,
            once: true, // animate only once
        });
    </script>


</body>
</html>
