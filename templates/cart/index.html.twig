{% extends 'base.html.twig' %}

{% block title %}üõí Your Cart{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center fw-bold">üõí Your Shopping Cart</h1>

    {% if items is not empty %}
        <div class="table-responsive shadow-sm">
            <table class="table align-middle text-center table-hover border rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price (DT)</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Subtotal</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="fw-semibold">{{ item.product.name }}</td>
                            <td>{{ item.product.price }}</td>
                            <td>
                                <form method="post" action="{{ path('cart_update', {'id': item.product.id}) }}" class="d-flex justify-content-center align-items-center gap-2">
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control form-control-sm w-50 text-center">
                                    <button type="submit" class="btn btn-outline-primary btn-sm">‚ü≥</button>
                                </form>
                            </td>
                            <td class="fw-bold">{{ (item.product.price * item.quantity)|number_format(2, '.', ',') }}</td>
                            <td>
                                <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-outline-danger btn-sm">üóëÔ∏è</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="{{ path('app_homepage') }}" class="btn btn-secondary">‚Üê Continue Shopping</a>
            <h4>Total: <span class="text-primary fw-bold">{{ total|number_format(2, '.', ',') }} DT</span></h4>
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">üõí Your cart is empty.</h3>
            <a href="{{ path('app_homepage') }}" class="btn btn-primary mt-3">Browse Products</a>
        </div>
    {% endif %}
</div>
{% endblock %}
