{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if app.user %}
            <h2>Welcome back, {{ app.user.firstname ?? app.user.email }}!</h2>
            <p><a href="{{ path('app_profile') }}">Go to your profile</a></p>
            {% if is_granted('ROLE_ADMIN') %}
                <p><a href="{{ path('admin_dashboard') }}">Admin Dashboard</a></p>
            {% endif %}
        {% else %}
            <h2>Welcome to Our Shop!</h2>
            <p><a href="{{ path('app_login') }}">Login</a> or <a href="{{ path('app_register') }}">Register</a> to get started.</p>
        {% endif %}
    </div>
{% endblock %}
